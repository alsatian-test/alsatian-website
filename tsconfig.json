{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "declaration": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react"
    },
    "buildOnSave": true,
    "compileOnSave": true,
    "exclude": [
        "./public/**/*.d.ts",
        "./server/**/*.d.ts",
        "./index.d.ts",
        "./typings/globals/**/*.d.ts",
        "./node_modules/**/*.*"
    ],
    "filesGlob": [
        "./**/*.tsx",
        "./**/*.ts",
        "./typings/index.d.ts"
    ],
    "files": [
        "./public/ts/app-component.tsx",
        "./public/ts/app-router.tsx",
        "./public/ts/components/pages/blog-page-component.tsx",
        "./public/ts/components/pages/documentation-page-component.tsx",
        "./public/ts/components/pages/get-started-page-component.tsx",
        "./public/ts/components/pages/home-page-component.tsx",
        "./public/ts/components/pages/not-found-page-component.tsx",
        "./public/ts/components/pages/tutorials-page-component.tsx",
        "./public/ts/components/tutorials/getting-started-tutorial.tsx",
        "./public/ts/menu-component.tsx",
        "./public/ts/navigation-bar-component.tsx",
        "./public/ts/tdd-tutor-poc.tsx",
        "./index.ts",
        "./server/app.ts",
        "./server/test-service.ts",
        "./typings/index.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
