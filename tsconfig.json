{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "declaration": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [ "es5", "es2015.promise" ],
        "jsx": "react"
    },
    "buildOnSave": true,
    "compileOnSave": true,
    "exclude": [
        "./public/**/*.d.ts",
        "./server/**/*.d.ts",
        "./index.d.ts",
        "./**/*.d.ts",
        "./typings/globals/**/*.d.ts",
        "./node_modules/**/*.*"
    ],
    "include": [
        "./public/**/*.tsx",
        "./public/**/*.ts",
        "./server/**/*.tsx",
        "./server/**/*.ts",
        "./test/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
